@page
@model GinasioIsla.Pages.Alunos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno.Apelido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Apelido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno.DataInscricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.DataInscricao)
        </dd>

        <dd> <br /></dd>

        <!-- Adicionar informação referente à Modalidade de cada aluno -->
        <dt>
            @Html.DisplayNameFor(model=>model.Aluno.Inscricoes)
        </dt>
        <dd>

            <table class="table">
                <tr>
                    <th>Modalidade</th>
                    <th>Horas Semanais</th>
                </tr>
                @foreach(var item in Model.Aluno.Inscricoes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Modalidade.NomeModalidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Modalidade.HorasSemanais)
                        </td>
                    </tr>
                }

            </table>
        </dd>
        <!-- Fim da adição -->

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Aluno?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
